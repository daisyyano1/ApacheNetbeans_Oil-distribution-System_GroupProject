    private void additemActionPerformed(java.awt.event.ActionEvent evt) {                                        
// Add Item button action
additem.addActionListener(new java.awt.event.ActionListener() {
    public void actionPerformed(java.awt.event.ActionEvent evt) {
        // Get the table model
        javax.swing.table.DefaultTableModel model = 
            (javax.swing.table.DefaultTableModel) jTable1.getModel();

        // Get values from text fields
        String itemid   = orderitemid.getText();
        String oid      = orderid.getText();
        String pid      = productid.getText();
        String qty      = quantity.getText();
        String price    = unitprice.getText();
        String disc     = discount.getText();

        // Auto-calculate subtotal
        double q = Double.parseDouble(qty);
        double p = Double.parseDouble(price);
        double d = Double.parseDouble(disc);
        double sub = (q * p) - d;

        // Update subtotal field
        subtotal.setText(String.valueOf(sub));

        // Add row to table
        model.addRow(new Object[]{itemid, oid, price, pid, qty, disc, String.valueOf(sub)});
    }
});


        // TODO add your handling code here:
    }                                       

    private void deleteitemActionPerformed(java.awt.event.ActionEvent evt) {                                           
deleteitem.addActionListener(new java.awt.event.ActionListener() {
    public void actionPerformed(java.awt.event.ActionEvent evt) {
        // Get the table model
        javax.swing.table.DefaultTableModel model =
            (javax.swing.table.DefaultTableModel) jTable1.getModel();

        // Find the selected row
        int selectedRow = jTable1.getSelectedRow();

        if (selectedRow != -1) {
            // Remove the selected row
            model.removeRow(selectedRow);
        } else {
            // Show a message if no row is selected
            javax.swing.JOptionPane.showMessageDialog(null, "Please select a row to delete.");
        }
    }
});

