    // Method to load data from MySQL
public void loadDataFromDatabase() {
    try {
        Class.forName("com.mysql.cj.jdbc.Driver");
        java.sql.Connection conn = java.sql.DriverManager.getConnection(
            "jdbc:mysql://localhost:3306/oil_distribution", "root", "your MSQL password");

        String query = "SELECT * FROM order_items";
        java.sql.Statement stmt = conn.createStatement();
        java.sql.ResultSet rs = stmt.executeQuery(query);

        javax.swing.table.DefaultTableModel model =
            (javax.swing.table.DefaultTableModel) jTable1.getModel();

        model.setRowCount(0); // clear table

        while (rs.next()) {
            String itemid   = rs.getString("order_item_id");
            String oid      = rs.getString("order_id");
            String pid      = rs.getString("product_id");
            String qty      = rs.getString("quantity");
            String price    = rs.getString("unit_price");
            String disc     = rs.getString("discount");
            String sub      = rs.getString("subtotal");

            model.addRow(new Object[]{itemid, oid, price, pid, qty, disc, sub});
        }

        rs.close();
        stmt.close();
        conn.close();
    } catch (Exception e) {
        javax.swing.JOptionPane.showMessageDialog(null, "Error loading data: " + e.getMessage());
    }
}


